<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow"
        android:orientation="horizontal"

        >

        <ImageView
            android:id="@+id/rili"
            android:layout_width="44dp"
            android:layout_height="40dp"
            android:src="@drawable/rili"
            android:clickable="true"
            android:onClick="choosthedate"

            />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >

      <com.example.smilewithu.mainpage.MyTextView
          android:id="@+id/showthedate"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dip"
          android:text="今天"
          android:textSize="20dp"
          android:gravity="fill"
          />




      <LinearLayout

          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginLeft="10dip"
          android:orientation="horizontal">

          <com.example.smilewithu.mainpage.MyTextView
              android:id="@+id/in_day"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="收入："
              android:textSize="15dp"
              />
          <com.example.smilewithu.mainpage.MyTextView
              android:id="@+id/out_day"
              android:layout_width="wrap_content"
              android:layout_weight="1"
              android:layout_height="match_parent"
              android:text="支出："
              android:textSize="15dp"
              />
      </LinearLayout>
  </LinearLayout>

    </LinearLayout>







    <com.example.smilewithu.mainpage.SideslipListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_view"
        >
    </com.example.smilewithu.mainpage.SideslipListView>


</LinearLayout>