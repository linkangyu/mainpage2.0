<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="55dp"
                    android:background="@color/yellow"
                    android:src="@drawable/xie" />

                <com.example.smilewithu.mainpage.MyTextView
                    android:id="@+id/showkind"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/yellow"
                    android:gravity="center"
                    android:text="选择"
                    android:textSize="20dp" />

            </LinearLayout>



            <EditText
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/yellow"
                android:hint="备注:"
                android:textSize="20dp"

                />

        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="65dp">

                <TextView
                    android:id="@+id/out"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="bottom|right"

                    android:text="0"

                    android:textSize="50sp" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="65dp">

                <Button
                    android:id="@+id/add"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_column="0"
                    android:layout_weight="1"

                    android:onClick="ad"
                    android:text="+"

                    android:textSize="40dp" />

                <Button
                    android:id="@+id/minus"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_weight="1"

                    android:onClick="minu"
                    android:text="-"

                    android:textSize="40dp" />

                <Button
                    android:id="@+id/multiply"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_column="0"
                    android:layout_weight="1"

                    android:onClick="mul"
                    android:text="×"

                    android:textSize="40dp" />


                <Button
                    android:id="@+id/divided"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_column="0"
                    android:layout_weight="1"

                    android:onClick="div"
                    android:text="÷"

                    android:textSize="40dp" />


            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/num7"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_column="0"
                    android:layout_weight="1"

                    android:onClick="n7"
                    android:text="7"

                    android:textSize="40dp" />

                <Button
                    android:id="@+id/num8"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_column="0"
                    android:layout_weight="1"

                    android:onClick="n8"
                    android:text="8"

                    android:textSize="40dp" />

                <Button
                    android:id="@+id/num9"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_column="0"
                    android:layout_weight="1"

                    android:onClick="n9"
                    android:text="9"

                    android:textSize="40dp" />

                <Button
                    android:id="@+id/cancel"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:onClick="can"
                    android:text="取消"

                    android:textSize="30dp"


                    />

            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/num4"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_column="0"
                    android:layout_weight="1"

                    android:onClick="n4"
                    android:text="4"

                    android:textSize="40dp" />

                <Button
                    android:id="@+id/num5"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_column="0"
                    android:layout_weight="1"

                    android:onClick="n5"
                    android:text="5"

                    android:textSize="40dp" />

                <Button
                    android:id="@+id/num6"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_column="0"
                    android:layout_weight="1"

                    android:onClick="n6"
                    android:text="6"

                    android:textSize="40dp" />

                <Button
                    android:id="@+id/choosedate"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:clickable="true"

                    android:onClick="setdate"
                    android:text="今天"
                    android:textSize="30dp"


                    />
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/num1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_column="0"
                    android:layout_weight="1"

                    android:onClick="n1"
                    android:text="1"

                    android:textSize="40dp" />

                <Button
                    android:id="@+id/num2"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_column="0"
                    android:layout_weight="1"

                    android:onClick="n2"
                    android:text="2"

                    android:textSize="40dp" />

                <Button
                    android:id="@+id/num3"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_column="0"
                    android:layout_weight="1"

                    android:onClick="n3"
                    android:text="3"

                    android:textSize="40dp" />

                <Button
                    android:id="@+id/clear"
                   style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:onClick="clearall"
                    android:text="清零"

                    android:textSize="30dp"


                    />
            </TableRow>


            <TableRow>

                <Button
                    android:id="@+id/num0"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="99dp"
                    android:layout_height="80dp"
                    android:layout_column="0"
                    android:layout_weight="1"

                    android:onClick="n0"
                    android:text="0"

                    android:textSize="40dp" />


                <Button
                    android:id="@+id/dot"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_column="0"
                    android:layout_weight="1"

                    android:onClick="dott"
                    android:text="."

                    android:textSize="40dp" />

                <Button
                    android:id="@+id/equal"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_column="0"
                    android:layout_weight="1"

                    android:onClick="equ"
                    android:text="="

                    android:textSize="40dp" />

                <Button
                    android:id="@+id/confirm"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:background="@color/yellow"
                    android:clickable="true"
                    android:onClick="con"
                    android:text="完成"
                    android:textSize="30dp"


                    />
            </TableRow>

        </TableLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>